
{{ set(this, 'title', t(module('USERS'), 'Sign in')) }}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ this.title }}</h3>
            </div>
            <div class="panel-body">
                {{ LOGIN_FORM|raw }}
            </div>

            <p class="text-center">
                {{ a(t(module('USERS'), 'Didn\'t receive confirmation message?'),
                    [route('SITE_USERS_REGISTRATION_RESEND')])
                    |raw
                }}
            </p>

            <p class="text-center">
                {{ a(t(module('USERS'),
                    'Don\'t have an account? Sign up!'),
                    [route('SITE_USERS_REGISTRATION_REGISTER')])
                    |raw
                }}
            </p>
        </div>
    </div>
</div>

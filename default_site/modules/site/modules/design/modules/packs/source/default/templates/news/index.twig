
{#
    news                Array of news objects
#}

{{ set(this, 'title', t(module('NEWS'), 'News')) }}

<div class="row">
    <div class="col-xs-12">
        {% if app.user.identity.isAdmin or app.user.can('NEWS_ADD') %}
        <div class="row margin-bottom-5">
            <div class="col-xs-12">
                <div class="btn-group pull-right">
                    <a href="{{ url({0: route('SITE_NEWS_CREATE')}) }}" class="btn btn-success">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-xs-12 text-center">
                {{ PAGINATION|raw }}
            </div>
        </div>

        {{ render('news/_list', {'news' : news})|raw }}

        <div class="row">
            <div class="col-xs-12 text-center">
                {{ PAGINATION|raw }}
            </div>
        </div>
    </div>
</div>
